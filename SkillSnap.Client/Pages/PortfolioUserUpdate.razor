@page "/portfoliouserupdate/{Id:int}"
@using SkillSnap.Shared.Models
@inject PortfolioUserService PortfolioUserService
@inject NavigationManager Navigation

<h3>Update Portfolio User</h3>
@if (user == null)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="user" OnValidSubmit="HandleUpdate">
        <InputText @bind-Value="user.Name" class="form-control" placeholder="Name" />
        <InputTextArea @bind-Value="user.Bio" class="form-control mt-2" placeholder="Bio" />
        <InputText @bind-Value="user.ProfileImageUrl" class="form-control mt-2" placeholder="Profile Image URL" />
        <button class="btn btn-primary mt-3" type="submit">Update</button>
        <button class="btn btn-secondary mt-3 ms-2" type="button" @onclick="@(() => Navigation.NavigateTo("/portfoliouserlist"))">Cancel</button>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }
    private PortfolioUser? user;

    protected override async Task OnInitializedAsync()
    {
        user = await PortfolioUserService.GetPortfolioUserByIdAsync(Id);
    }

    private async Task HandleUpdate()
    {
        await PortfolioUserService.UpdatePortfolioUserAsync(user!);
        Navigation.NavigateTo("/portfoliouserlist");
    }
}
