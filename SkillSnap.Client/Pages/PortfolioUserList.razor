@page "/portfoliouserlist"
@using SkillSnap.Shared.Models
@inject PortfolioUserService PortfolioUserService
@inject NavigationManager Navigation

<h3>Portfolio Users</h3>
<button class="btn btn-primary mb-3" @onclick="@(() => Navigation.NavigateTo("/portfoliousercreate"))">Create User</button>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Bio</td>
                <td>
                    <button class="btn btn-info btn-sm me-1" @onclick="@(() => Navigation.NavigateTo($"/portfoliouserview/{user.Id}"))">View</button>
                    <button class="btn btn-warning btn-sm me-1" @onclick="@(() => Navigation.NavigateTo($"/portfoliouserupdate/{user.Id}"))">Update</button>
                    <button class="btn btn-danger btn-sm" @onclick="@(() => DeleteUser(user.Id))">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<PortfolioUser> users = new();

    protected override async Task OnInitializedAsync()
    {
        users = await PortfolioUserService.GetPortfolioUsersAsync();
    }

    private async Task DeleteUser(int id)
    {
        await PortfolioUserService.DeletePortfolioUserAsync(id);
        users = await PortfolioUserService.GetPortfolioUsersAsync(); // refresh data
        StateHasChanged();
    }
}
